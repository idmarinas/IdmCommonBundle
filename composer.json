{
    "name": "idmarinas/common-bundle",
    "type": "symfony-bundle",
    "license": "BSD-3-Clause",
    "keywords": [],
    "authors": [
        {
            "name": "Iv√°n Diaz Marinas (IDMarinas)",
            "email": "35842929+idmarinas@users.noreply.github.com",
            "homepage": "https://github.com/idmarinas/common-bundle",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/idmarinas/common-bundle/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4 | ^8.0",
        "ramsey/uuid-doctrine": "^1.8",
        "symfony/config": "^4.4 | ^5.4 | ^6.1 | ^7.0",
        "symfony/console": "^4.4 | ^5.4 | ^6.1 | ^7.0",
        "symfony/dependency-injection": "^4.4 | ^5.4 | ^6.1 | ^7.0",
        "symfony/filesystem": "^4.4 | ^5.4 | ^6.1 | ^7.0",
        "symfony/form": "^4.4 | ^5.4 | ^6.1 | ^7.0",
        "symfony/validator": "^4.4 | ^5.4 | ^6.1 | ^7.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "laminas/laminas-filter": "^2.22",
        "matthiasnoback/symfony-config-test": "^4.2 | ^5.0",
        "matthiasnoback/symfony-dependency-injection-test": "^4.2 | ^5.0",
        "nyholm/symfony-bundle-test": "^2.0",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^1.2",
        "symfony/framework-bundle": "^4.4 | ^5.4 | ^6.1 | ^7.0",
        "symfony/phpunit-bridge": "^5.3",
        "symfony/test-pack": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Idm\\Bundle\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Idm\\Bundle\\Common\\Tests\\": "tests/"
        }
    },
    "funding": [
        {
            "type": "paypal",
            "url": "https://www.paypal.me/idmarinas"
        }
    ],
    "scripts": {
        "test": "phpunit"
    }
}
